<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.layout.*?>
<GridPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.Dashboard">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="250.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="250.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <StackedBarChart fx:id="monthlyBalance" prefHeight="400.0" prefWidth="200.0" GridPane.rowSpan="2">
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </StackedBarChart>
      <PieChart fx:id="topClients" GridPane.columnIndex="1" />
      <PieChart fx:id="mostSoldProducts" GridPane.columnIndex="2" />
      <AreaChart fx:id="allBalance" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1">
        <xAxis>
          <CategoryAxis label="Mes/Ano" side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis fx:id="yAxisAllBalance" label="Euros" side="LEFT" />
        </yAxis>
      </AreaChart>
   </children>
</GridPane>
